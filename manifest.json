{
	"manifest_version": 2,

	"name": "Gmailify Outlook",
	"description": "Change Outlook365 colors to have less color highlighting",
	"version": "1.0",

	"permissions": [
		"https://outlook.office.com/"
	],
	"content_scripts": [{
		"matches": ["https://outlook.office.com/*"],
		"css": ["css/simpler-styles.css"],
		"js":  ["js/body-style.js"]
	}]
}
